generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/master"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MASTER") // This env variable should be set from AWS SSM or Secrets Manager at runtime
}

model Tenant {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  dbName       String   @unique
  dbUser       String
  dbPassword   String
  createdAt    DateTime @default(now())
  restaurantId String   @unique
  useRedis     Boolean  @default(false)
}
